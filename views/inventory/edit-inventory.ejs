<div class="inventory-container">
    <h1><%= title %></h1>

    <!-- Flash message for errors -->
    <% if (Array.isArray(errors) && errors.length > 0) { %>
        <p class="flash-message error"><%= errors.join("<br>") %></p>
    <% } %>

    <!-- Edit Vehicle Form -->
    <form action="/inv/update" method="post" id="editInventoryForm" class="edit-inventory-form" enctype="multipart/form-data">
        
        <!-- Hidden Input for Vehicle ID -->
        <input type="hidden" name="inv_id" value="<%= inv_id %>">

        <div class="form-group">
            <label for="inv_make">Make:</label>
            <input type="text" name="inv_make" id="inv_make" required value="<%= inv_make %>">
        </div>

        <div class="form-group">
            <label for="inv_model">Model:</label>
            <input type="text" name="inv_model" id="inv_model" required value="<%= inv_model %>">
        </div>

        <div class="form-group">
            <label for="inv_year">Year:</label>
            <input type="number" name="inv_year" id="inv_year" min="1900" max="2025" required value="<%= inv_year %>">
        </div>

        <div class="form-group">
            <label for="inv_description">Description:</label>
            <textarea name="inv_description" id="inv_description" required><%= inv_description %></textarea>
        </div>

        <div class="form-group">
            <label for="inv_price">Price:</label>
            <input type="number" name="inv_price" id="inv_price" step="0.01" required value="<%= inv_price %>">
        </div>

        <div class="form-group">
            <label for="inv_miles">Miles:</label>
            <input type="number" name="inv_miles" id="inv_miles" required value="<%= inv_miles %>">
        </div>

        <div class="form-group">
            <label for="inv_color">Color:</label>
            <input type="text" name="inv_color" id="inv_color" required value="<%= inv_color %>">
        </div>

        <div class="form-group">
            <label for="classification_id">Classification:</label>
            <%= classificationSelect %> 
        </div>        

        <div class="form-group">
            <label for="inv_image">Current Image:</label>
            <img src="<%= inv_image %>" alt="Vehicle Image" width="150">
            <input type="hidden" name="existing_image" value="<%= inv_image %>">
        </div>

        <div class="form-group">
            <label for="inv_image">Upload New Image (optional):</label>
            <input type="file" name="inv_image" id="inv_image" accept="image/*">
        </div>

        <button type="submit">Update Vehicle</button>
    </form>
</div>

<script src="/js/inventory.js"></script> <!-- Link to custom scripts -->